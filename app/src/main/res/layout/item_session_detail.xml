<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/content_padding"
    android:layout_marginLeft="@dimen/content_padding"
    android:layout_marginRight="@dimen/content_padding"
    android:layout_width="match_parent"
    android:background="@drawable/sp_card_bg"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:gravity="center_vertical"
        android:elevation="1dp"
        android:background="@drawable/sp_subtitle_bg"
        android:id="@+id/ll_subtitle"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subtitle_height">
        <ImageView
            android:layout_marginLeft="@dimen/content_padding"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <LinearLayout
            android:id="@+id/ll_formats"
            android:background="@drawable/sp_format_bg"
            android:layout_marginRight="@dimen/content_padding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="160dp"
            android:layout_height="26dp">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_form"
                android:text="FORM"
                android:background="@drawable/sl_format_left_bg"
                android:textColor="@drawable/sl_format_text"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="#464646"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_raw"
                android:text="RAW"
                android:background="@drawable/sl_format_middle_bg"
                android:textColor="@drawable/sl_format_text"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#464646"/>
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/tv_hex"
                android:text="HEX"
                android:background="@drawable/sl_format_right_bg"
                android:textColor="@drawable/sl_format_text"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:textColor="@color/white_text"
        android:id="@+id/tv_headers"
        android:padding="@dimen/content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/white_text"
        android:id="@+id/tv_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="gone"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:scaleType="centerInside"
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>