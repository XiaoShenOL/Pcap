<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>


    <style name="Toolbar_menu" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#273248</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="setting_text_explain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_33</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:drawablePadding">15dp</item>
    </style>
    <style name="menu_text_item">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#454545</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="white_label">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
    </style>
    <style name="gray_label">
        <item name="android:textColor">@color/gray_c3_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
    </style>
</resources>
